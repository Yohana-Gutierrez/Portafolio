---
// src/pages/index.astro
import Footer from '../components/Footer.astro'; 
import Contact from '../components/Contacto.astro'; 
import ProjectCard from '../components/ProjectCard.astro'; 
import Header from '../components/Header.astro'; // Importa el nuevo Header
import { projects } from '../data/projects.ts'; 
---

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Portafolio</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header class="hero">
        <h1>¡Hola! Soy Anny Gutierrez</h1>
        <p>Estudiante de la carrera Ingeniería en Sistemas</p>
        <img
            alt="Descripción de la imagen"
            width="200"
            height="auto"
            src="/assets/principal.jpg"  
        />
    </header>

    <Header /> <!-- Aquí se llama al Header, ahora debajo de la foto -->

    <section>
        <h2>Sobre Mí</h2>
        <p>Estudiante de Ingeniería en Sistemas en UNAH Campus Comayagua.</p>
    </section>

    <main>
        <section>
            <h2>Trabajo Seleccionado</h2>
            <p>Bienvenido, estos son algunos de mis proyectos recientes trabajados en clases.</p>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                {
                    projects.map((project) => (
                        <ProjectCard project={project} key={project.title} />
                    ))
                }
            </div>
        </section>

        <Contact />
    </main>

    <Footer />
    
    <style>
        :root {
            --soft-blue: #b3d4f2; /* Azul suave para el fondo */
            --text-color: black; /* Color de texto negro */
        }
    
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: var(--gray-999); /* Ajusta si es necesario */
            color: var(--text-color); /* Usa la variable de texto */
        }
    
        header {
            text-align: center;
            padding: 2rem;
            background-color: #333;
            color: #fff;
        }
    
        main {
            padding: 2rem;
        }
    
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
        }
    </style>
    
</body>
</html>
