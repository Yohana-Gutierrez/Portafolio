---
import Footer from '../components/Footer.astro'; // Ajusta la ruta según sea necesario
import { getCollection } from 'astro:content';

// Content Fetching: List four most recent work projects
const projects = (await getCollection('work'))
    .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
    .slice(0, 4);
---

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Portafolio</title>
    <!-- Elimina esta línea si no tienes un archivo styles.css
    <link rel="stylesheet" href="/path/to/your/styles.css"> 
    -->
</head>
<body>
    <header class="hero">
        <h1>¡Hola! Soy [Tu Nombre]</h1>
        <p>Desarrollador Web | Diseñador | [Otra descripción]</p>
        <img
            alt="Descripción de la imagen"
            width="480"
            height="620"
            src="/assets/principal.jpg"  <!-- Asegúrate de que esta es la ruta correcta -->
        />
    </header>

    <main>
        <section>
            <h2>Trabajo Seleccionado</h2>
            <p>Mira algunos de mis proyectos recientes.</p>
            <ul>
                {
                    projects.map((project) => (
                        <li>
                            <h3>{project.title}</h3>
                            <p>{project.description}</p>
                        </li>
                    ))
                }
            </ul>
        </section>

        <section>
            <h2>Sobre Mí</h2>
            <p>Descripción más detallada sobre ti y tus habilidades.</p>
        </section>

        <section>
            <h2>Contacto</h2>
            <form action="/enviar" method="post">
                <label for="name">Nombre</label>
                <input type="text" id="name" name="name" required>
                
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
                
                <label for="message">Mensaje</label>
                <textarea id="message" name="message" required></textarea>
                
                <button type="submit">Enviar</button>
            </form>
        </section>
    </main>

    <Footer />  <!-- Aquí es donde se integra el footer -->

    <style>
        /* Estilos básicos */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            line-height: 1.6;
            background-color: #f9f9f9;
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Asegura que el footer esté al final */
        }

        header {
            text-align: center;
            padding: 2rem;
            background-color: #333;
            color: #fff;
        }

        main {
            padding: 2rem;
            flex: 1; /* Permite que main ocupe el espacio disponible */
        }

        section {
            margin-bottom: 2rem;
        }
    </style>
</body>
</html>
